@inject NavigationManager Navigation
<MudSpacer/>
    <MudTabs Elevation="4" Rounded="true" Centered="true">
        <MudTabPanel Icon="@Icons.Material.Filled.Home" Text="Home" OnClick="() => Navigate(Links.Home)"/>
        <MudTabPanel Icon="@Icons.Material.Filled.Person" Text="Drivers" OnClick="() => Navigate(Links.Drivers)"/>
        <MudTabPanel Icon="@Icons.Material.Filled.Group" Text="Teams" OnClick="() => Navigate(Links.Teams)"/>
        <MudTabPanel Icon="@Icons.Material.Filled.CalendarMonth" Text="Calendar" OnClick="() => Navigate(Links.Schedule)"/>
        <MudTabPanel Icon="@Icons.Material.Filled.Calculate" Text="Circuit" OnClick="() => Navigate(Links.Circuits)"/>
        @if (_themeService.IsDarkMode)
        {
            <MudTabPanel Variant="Variant.Filled" Icon="@Icons.Material.Filled.DarkMode" OnClick="@_themeService.ToggleDarkMode"/>
        }
        else
        {
            <MudTabPanel Variant="Variant.Filled" Icon="@Icons.Material.Filled.LightMode" OnClick="@_themeService.ToggleDarkMode"/>
        }
    </MudTabs>
<MudSpacer/>

@code{
    
    private int _panelIndex = 0;
    
    private void Navigate(string link)
    {
        _panelIndex = link switch
        {
            "driver" => 0,
            "teams" => 1,
            "calendar" => 2,
            _ => _panelIndex
            };
        Navigation.NavigateTo(link);
    }

}